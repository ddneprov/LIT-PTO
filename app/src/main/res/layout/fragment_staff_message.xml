<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:elevation="90dp"
        android:id="@+id/dialog_1">

        <TextView
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/profilePhoto"
            android:fontFamily="@font/old_standard_tt"
            android:text="Нюта Байдавлетова"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/message"
            android:layout_width="296dp"
            android:layout_height="33dp"
            android:layout_below="@id/post_title"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/profilePhoto"
            android:fontFamily="@font/old_standard_tt"
            android:text="Здравствуйте"
            android:textSize="14dp" />



        <ImageView
            android:id="@+id/profilePhoto"
            android:background="@drawable/girlfive"
            android:layout_toLeftOf="@+id/select_status"
            android:layout_width="65dp"
            android:layout_height="65dp" />



        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/old_standard_tt"
            android:text="12:34" />


        <ImageView
            android:id="@+id/already_read"
            android:background="@drawable/flower"
            android:layout_below="@+id/time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:elevation="90dp"
        android:layout_below="@+id/dialog_1"
        android:id="@+id/dialog_2">

        <TextView
            android:id="@+id/post_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/profilePhoto2"
            android:fontFamily="@font/old_standard_tt"
            android:text="Нюта Байдавлетова"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/message2"
            android:layout_width="296dp"
            android:layout_height="33dp"
            android:layout_below="@id/post_title2"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/profilePhoto2"
            android:fontFamily="@font/old_standard_tt"
            android:text="У меня есть вопрос по работе"
            android:textSize="14dp" />



        <ImageView
            android:id="@+id/profilePhoto2"
            android:background="@drawable/girlsix"
            android:layout_toLeftOf="@+id/select_status"
            android:layout_width="65dp"
            android:layout_height="65dp" />



        <TextView
            android:id="@+id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/old_standard_tt"
            android:text="13:30" />


        <ImageView
            android:id="@+id/already_read2"
            android:background="@drawable/flower"
            android:layout_below="@+id/time2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </RelativeLayout>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:elevation="90dp"
        android:layout_below="@+id/dialog_2"
        android:id="@+id/dialog_3">

        <TextView
            android:id="@+id/post_title3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/profilePhoto3"
            android:fontFamily="@font/old_standard_tt"
            android:text="Нюта Байдавлетова"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/message3"
            android:layout_width="296dp"
            android:layout_height="33dp"
            android:layout_below="@id/post_title3"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/profilePhoto3"
            android:fontFamily="@font/old_standard_tt"
            android:text="Спасибо за проверку"
            android:textSize="14dp" />



        <ImageView
            android:id="@+id/profilePhoto3"
            android:background="@drawable/girltwo"
            android:layout_toLeftOf="@+id/select_status"
            android:layout_width="65dp"
            android:layout_height="65dp" />



        <TextView
            android:id="@+id/time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/old_standard_tt"
            android:text="10:20" />


        <ImageView
            android:id="@+id/already_read3"
            android:background="@drawable/flower"
            android:layout_below="@+id/time3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:fontFamily="@font/noteworthy"
        android:layout_height="wrap_content"
        android:text="Дмонстрация"
        android:layout_centerInParent="true"
        android:textSize="30dp"/>

</RelativeLayout>