<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightPink">


    <TextView
        android:id="@+id/send_composition_question"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textColor="#F8F8F8"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:fontFamily="@font/noteworthy"
        android:text="Отправить сочинение?"/>


    <Button
        android:id="@+id/bottom_yes"
        android:background="@drawable/reg_shape"
        android:layout_below="@+id/send_composition_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Да"
        android:textColor="#ffff"
        android:fontFamily="@font/noteworthy"/>





    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="161dp"
        android:layout_height="42dp"
        android:layout_below="@+id/bottom_yes"
        app:srcCompat="@drawable/decorative_leaf_left" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="161dp"
        android:layout_height="42dp"
        android:layout_below="@+id/bottom_yes"
        app:srcCompat="@drawable/decorative_leaf_right" />

</RelativeLayout>