<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_staff_main"
    tools:context=".staff_fragments.STAFF_MainActivity">


    <FrameLayout
        android:id="@+id/staff_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"/>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/staff_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="#FF663F56"
        app:itemTextColor="#FF663F56"
        app:menu="@menu/staff_bottom_navigation" />


</RelativeLayout>